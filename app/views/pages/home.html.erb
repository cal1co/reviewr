<div class="darkmode"></div>



<%= button_to "All", home_all_path, class:"userfeed" %>
<%= link_to "COMPOSE", new_review_path, class:"compose" %>
<%# Sorted by latest %>

<% if @current_user.present? %>

    <script>
        const textAreaGrow = function(textArea){
            if (textArea.clientHeight < textArea.scrollHeight){
            textArea.style.height = textArea.scrollHeight + "px";
        }
        }
        // const maxLimit = function(){
        // }
    </script>

    <% if @review.errors.any?  %>
        <strong>ERROR:</strong>
        <% @review.errors.full_messages.each do |e|  %>
            <%= e %>
        <% end %>
    <% end %>

    <%= form_with model: [@review], local:true, html:{multipart:true} do |f| %>
        <div class="review-form">
            <div class="article-title">
                <%= f.text_field :title, :maxlength => 35, :minlength => 1, placeholder:'article title', autocomplete:"off" %>
            <%# :onkeyup => "maxLimit(this)" %>
            </div>
            <div class="input">
                <%= f.text_area :rating, rows: 1, :maxlength => 280, placeholder:'type in me', :onkeyup => "textAreaGrow(this)"%>
            </div>
            <div class="review-image"> 
                <%= f.file_field :image %>
            </div>
            <%= f.submit %>
        </div>

    <% end %>
    

<% end %>  <%# compose %>

<% @reviews.each do |r| %>

    <% if r.user.followers.count != 0 %>
    
        <% if r.user == @current_user or r.user.followers.include? @current_user %>

        <div class="reviewblock">

            <div class="userimg">
            <% if r.user.setimage %>
                <%= cl_image_tag r.user.image, width:'25'%>
            <% else %>
                <%= image_tag r.user.image, width:'25' %>
            <% end %>
            
            </div>
                <div class="title">
                    <p>
                    <%= link_to r.title, review_path(r.id) %>
                    </p>
                </div>

                <div class="user">
                    <p>
                        <%= link_to '@' + r.user.username.to_s, user_path(r.user.id) %>
                    </p>
                </div>

                <div class="content">
                    <p>
                        <%= r.rating %>
                    </p>
                    <% unless r.image == nil %>
                        <div class="post-image">
                            <%= cl_image_tag r.image %>
                        </div>
                    <% end %>
                </div>

                <div class="create_time">
                    <p>
                        <%= r.created_at.strftime("%H:%M, %Y-%m-%d") %>
                    </p>
                </div>

            <div class = "up">
                <% pre_like = r.likes.find { |like| like.user_id == @current_user.id} %>
                    <% if pre_like %>
                        <%= button_to '', review_like_path(r.id, pre_like), method: :delete, class:"likebutt btn btn-danger" %>
                    <% else %>
                        <%= button_to '', review_likes_path(r.id), method: :post, class:"likebutt btn btn-outline-danger" %>
                    <% end %>
            </div>

                <div class="count">
                    <p>
                    <%= r.likes.count %> 
                    </p>
                </div>
            <div class="edit">
                <% if @current_user.id == r.user.id%>
                    <%= link_to "DELETE", review_path(r.id), method:'delete' %>
                <% end %>
            </div>

        </div> <%# reviewblock %>

        <% end %> 

    <% end %>

<% end %> <%# show reviews %>
