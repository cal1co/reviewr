
<h1><%= @userinfo.username%>'s profile</h1>

<% if @userinfo.image == nil %>
   <% @userinfo.update! image: @userimg%>

<% else %>
    <div class="profile-page-image">
        <%= image_tag @userinfo.image %>
    </div>

<% end %>

<h2>Recent posts from this user:</h2>


<%# TURN THIS INTO A FORM!! %>
<% @userinfo.reviews.each do |r| %>
<div class="container">
        <div class="title">
            <p>
            <%= r.title %>
            </p>
        </div>
        <div class="user">
        <p>
            @<%= link_to r.user.username, user_path(r.user.id) %>
        </p>
        </div>
        <div class="content">
        <p>
            <%= r.rating %>
        </p>
        </div>
        <div class="create_time">
            <p>
            <%= r.created_at.strftime("%H:%M, %Y-%m-%d") %>
            </p>
        </div>
    <div class="edit">
        <% if @current_user.id == r.user.id%>
        <%= link_to "DELETE", review_path(r.id), method:'delete' %>
    <% end %>
    </div>
</div>
<% end %>

